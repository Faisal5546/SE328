<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="false"
    tools:context=".student_schedule">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:src="@drawable/header"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="19dp"
        android:layout_height="33dp"
        android:layout_marginLeft="362dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/header_menu_3dots"
        android:foreground="@drawable/header_menu_3dots"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="29dp"
        android:fontFamily="@font/avenir_regular"
        android:text="@string/my_schedule"
        android:textColor="@color/white"
        android:textSize="23sp"/>

    <!--here you concatenate the name of the user after they login
    ,(first names only)-->
    <TextView
        android:id="@+id/headerWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="49sp"
        android:shadowColor="#EBE1E1"
        android:shadowDx="6"
        android:shadowDy="8"
        android:shadowRadius="7"
        android:fontFamily="@font/avenir_black"
        android:textColor="@color/white"
        android:layout_marginTop="108dp"
        android:layout_marginLeft="83dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="280dp"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <Button
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/location_sign"
                android:background="#00FFFFFF"
                android:textStyle="italic"
                android:clickable="false"
                android:textSize="15sp"
                android:text="Bg65"
                android:textColor="#030303"/>

            <TextView
                android:id="@+id/courseCode"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="79dp"
                android:fontFamily="@font/sf_pro"
                android:text="SE322"
                android:textColor="#333333"
                android:textSize="21sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/facultyName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="italic"
                android:fontFamily="@font/sf_pro"
                android:textColor="#333333"
                android:text="Eng. Saif"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/startingTime"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro"
                android:textSize="17sp"
                android:textColor="#BBBBBB"
                android:textAlignment="center"
                android:text="12:00"
                android:textStyle="italic"
                android:layout_marginTop="15.5dp"
                android:layout_marginLeft="160dp"/>

            <ImageView
                android:id="@+id/indicatorImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bar_indicator"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="27dp"/>

            <TextView
                android:id="@+id/exam_type"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro"
                android:text="Midterm"
                android:textAlignment="center"
                android:textColor="#030303"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="230dp"/>

            <TextView
                android:id="@+id/exam_date"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro"
                android:text="April 22"
                android:textAlignment="center"
                android:textColor="#00B9E6"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="230dp"/>

            <TextView
                android:id="@+id/endingTime"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro"
                android:textSize="17sp"
                android:textColor="#BBBBBB"
                android:textAlignment="center"
                android:text="12:00"
                android:textStyle="italic"
                android:layout_marginTop="15.5dp"
                android:layout_marginLeft="307dp"/>

            <Button
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:alpha="0.0"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>
    </LinearLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_marginTop="743dp"
        android:layout_width="wrap_content"
        android:layout_height="75dp">
        <com.google.android.material.bottomappbar.BottomAppBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomAppBar"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:fabCradleMargin="20dp"
            app:fabCradleRoundedCornerRadius="30dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                app:labelVisibilityMode="labeled"
                app:elevation="0dp"
                app:menu="@menu/bottom_menu" />

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_add_24"
            app:layout_anchor="@id/bottomAppBar"
            app:maxImageSize="40dp"
            app:tint="@color/lavender"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.cardview.widget.CardView>
